@model IEnumerable<Actor>

@{
    ViewData["Title"] = "List of Actors";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h3 class="mb-0"><i class="bi bi-people-fill me-2"></i>@ViewData["Title"]</h3>
            <a asp-action="Create" asp-controller="Actors" class="btn btn-light btn-sm fw-bold">
                <i class="bi bi-plus-circle me-1"></i> Add New
            </a>
        </div>
        <div class="card-body">
            <table class="table table-hover align-middle text-center">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
                        <th>@Html.DisplayNameFor(model => model.FullName)</th>
                        <th>@Html.DisplayNameFor(model => model.Bio)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var actor in Model)
                    {
                        <tr class="table-row">
                            <td>
                                <img class="rounded-circle shadow-sm" src="@actor.ProfilePictureURL" alt="@actor.FullName"
                                     style="width:80px; height:80px; object-fit:cover;" />
                            </td>
                            <td>@actor.FullName</td>
                            <td class="text-muted text-truncate" style="max-width: 300px;">@actor.Bio</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-controller="Actors" asp-route-id="@actor.Id" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Details" asp-controller="Actors" asp-route-id="@actor.Id" class="btn btn-outline-info btn-sm">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-controller="Actors" asp-route-id="@actor.Id" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


