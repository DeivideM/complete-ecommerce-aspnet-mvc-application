@*Define model*@
@*Define ViewData*@
@*Write code*@

@model Producer

@{
    ViewData["Title"] = "Delete Producer";
}

<div class="row text">
    <div class="col-md-8 offset-md-2">
        <p>
            <h1>Delete confirmation for @Model.FullName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <!-- Pré-visualização da imagem -->
                <div class="form-group text-center">
                    <img id="ProfilePicturePreview" />
                    @* <img id="ProfilePicturePreview" src="" alt="Profile Picture Preview" class="rounded-preview mt-2"> *@
                </div>

                <div class="form-group">
                    <label asp-for="ProfilePictureURL" class="control-label"></label>
                    <input asp-for="ProfilePictureURL" class="form-control" readonly />
                    <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" readonly />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Bio" class="control-label"></label>
                    <input asp-for="Bio" class="form-control" readonly />
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>

                <div class="form-group d-flex justify-content-between mt-3">
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    @* <form action="Delete" method="post"> *@
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-outline-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>

        $(document).ready(function() {
            // Set initial preview image if ProfilePictureURL has a value
            var initialUrl = $("#ProfilePictureURL").val();
            if (initialUrl) {
                $("#ProfilePicturePreview").attr("src", initialUrl);
                $("#ProfilePicturePreview").css({
                    "max-width": "200px",
                    "max-height": "200px",
                    "border-radius": "50%",   // <-- deixa a imagem circular
                    "object-fit": "cover",    // <-- mantém a proporção dentro do círculo
                    "border": "2px solid #ccc" // opcional: borda ao redor
                });
            }
        })

    </script>
}