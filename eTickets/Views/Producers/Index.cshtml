@*Define model*@
@*Define ViewData*@
@*Write code*@

@model IEnumerable<Producer>

@{
    ViewData["Title"] = "List of Producers";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var producer in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@producer.ProfilePictureURL" alt="@producer.FullName" style="max-width:150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model => producer.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(model => producer.Bio)
                        </td>
                        <td class="align-middle">
                            @* <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a> *@
                            @* <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a> *@
                            @* <a class="btn btn-danger"><i class="bi bi-trash"></i>Delete</a> *@
                            <a asp-action="Edit" asp-controller="Producers" asp-route-id="@producer.Id" class="btn btn-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-action="Details" asp-controller="Producers" asp-route-id="@producer.Id" class="btn btn-info"><i class="bi bi-eye"></i>Details</a>
                            <a asp-action="Delete" asp-controller="Producers" asp-route-id="@producer.Id" class="btn btn-danger"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

