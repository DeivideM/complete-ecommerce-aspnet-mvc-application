@using eTickets.Data.ViewModels
@model ShoppingCartViewModel

@{
    ViewData["Title"] = "Your Shopping Cart";
}

<div class="row">
    <div class="col-md-8-offset-2">
        <h2>Your Shopping Cart</h2>
        @if (Model.ShoppingCart.ShoppingCartItems != null && Model.ShoppingCart.ShoppingCartItems.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Selected amount</th>
                        <th>Movie</th>
                        <th>Price</th>
                        <th>SubTotal</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ShoppingCart.ShoppingCartItems)
                    {
                        <tr>
                            <td>@item.Amount</td>
                            <td>@item.Movie.Name</td>
                            <td>@item.Movie.Price.ToString("C")</td>
                            <td>@((item.Amount * item.Movie.Price).ToString("C"))</td>
                            <td class="align-middle">
                                <a class="text-danger" asp-controller="Orders" asp-action="RemoveItemFromShoppingCart" asp-route-id="@item.Movie.Id">
                                    <i class="bi bi-cart-dash"></i>
                                </a>
                                |
                                <a class="text-success" asp-controller="Orders" asp-action="AddToShoppingCart" asp-route-id="@item.Movie.Id">
                                    <i class="bi bi-cart-plus"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <h3>Total Amount: @Model.ShoppingCartTotal.ToString("C")</h3>
            <div class="d-flex justify-content-center gap-2 mt-3">
                <a asp-controller="Movies" asp-action="Index" class="btn btn-secondary">Add more items</a>
                <a asp-controller="Orders" asp-action="Checkout" class="btn btn-primary">Proceed to Checkout</a>
            </div>

            <!-- PayPal Button Section -->
            <div class="d-flex justify-content-center mt-3">
                <!-- Replace with your actual PayPal button -->
                <div id="paypal-button-container"></div>
            </div>
        }
        else
        {
            <p>Your shopping cart is empty.</p>
            <a asp-controller="Movies" asp-action="Index" class="btn btn-secondary">Browse Movies</a>
        }
    </div>
</div>

@section Scripts {
    <!-- SDK oficial do PayPal (modo SANDBOX) -->
    <script src="https://www.paypal.com/sdk/js?client-id=YOUR_CLIENT_ID_SANDBOX&currency=USD&intent=capture"></script>
        @* // *@
    <script>
        // Converte o valor total para número com ponto
        const total = parseFloat('@Model.ShoppingCartTotal'.replace(',', '.'));

        paypal.Buttons({
            // Cria o pedido
            createOrder: function (data, actions) {
                return actions.order.create({
                    purchase_units: [{
                        amount: {
                            value: total.toFixed(2) // valor do pagamento vindo do backend
                            //currency_code: 'USD'
                        }
                    }]
                });
            },
            // Quando o pagamento é aprovado
            onApprove: function (data, actions) {
                return actions.order.capture().then(function (details) {
                    alert('Pagamento realizado com sucesso por ' + details.payer.name.given_name);

                    // Exemplo: redirecionar para uma página de confirmação
                    //window.location.href = '/Orders/PaymentSuccess?orderId=' + data.orderID;
                    window.location.href = '@Url.Action("Checkout", "Orders")';
                });
            },
            // Se o usuário cancela
            onCancel: function (data) {
                alert('Pagamento cancelado.');
            },
            // Se ocorrer erro
            onError: function (err) {
                console.error(err);
                alert('Ocorreu um erro ao processar o pagamento.');
            }
        }).render('#paypal-button-container');
    </script>
}