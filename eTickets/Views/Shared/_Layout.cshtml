<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eTickets</title>

    <!-- Bootstrap & Icons -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/eTickets.styles.css" asp-append-version="true" />

    @* <style>
        
    </style> *@
</head>

<body>
    <!-- HEADER -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm sticky-top">
            <div class="container-fluid px-4">

                <!-- Brand -->
                <a class="navbar-brand d-flex align-items-center" asp-controller="Movies" asp-action="Index">
                    <i class="bi bi-ticket-perforated-fill me-2 fs-4 text-primary"></i>
                    eTickets
                </a>

                <!-- Toggle Button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar Links -->
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @* <li class="nav-item">
                            <a class="nav-link" asp-controller="Movies" asp-action="Index">
                                <i class="bi bi-film me-1"></i> Movies
                            </a>
                        </li> *@


                        @if(User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <!-- Management Dropdown -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-gear"></i> Management
                                </a>
                                <ul class="dropdown-menu shadow border-0 rounded-3" aria-labelledby="navbarDropdown">
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center gap-2" asp-controller="Actors" asp-action="Index">
                                            <i class="bi bi-person-square text-primary"></i> Actors
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center gap-2" asp-controller="Producers" asp-action="Index">
                                            <i class="bi bi-headset text-success"></i> Producers
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center gap-2" asp-controller="Cinemas" asp-action="Index">
                                            <i class="bi bi-camera-reels text-info"></i> Cinemas
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <!-- Search Bar -->
                    <form class="d-flex search-bar me-3" asp-controller="Movies" asp-action="Filter">
                        <input name="searchString" type="text" class="form-control me-2" placeholder="Search for a movie...">
                        <button class="btn btn-outline-primary" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </form>

                    <!-- Shopping Cart -->
                    <div class="cart-summary">
                        @await Component.InvokeAsync("ShoppingCartSummary")
                    </div>

                    <!-- Profile Dropdown -->
                    <partial name="_Identity.cshtml"/>
                    
                </div>
            </div>
        </nav>
    </header>

    <!-- MAIN -->
    <div class="container my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="border-top text-muted mt-auto">
        <div class="container text-center">
            &copy; 2025 - <strong>eTickets</strong> 🎟️ &nbsp;|&nbsp;
            <a asp-controller="Movies" asp-action="Index" class="text-decoration-none text-primary">Home</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>