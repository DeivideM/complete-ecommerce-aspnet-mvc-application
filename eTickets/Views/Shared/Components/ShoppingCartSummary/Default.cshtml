@using eTickets.Data.Cart
@model ShoppingCart

@{
    var total = ViewBag.ShoppingCartTotal ?? 0;
}

<a asp-controller="Orders" asp-action="ShoppingCart" class="nav-link d-flex align-items-center">
    <i class="bi bi-cart-fill text-primary" style="font-size: 1.5rem;"></i>

    <span class="ms-2 fw-semibold text-dark">
        @String.Format("{0:C}", total)
    </span>

    @if (Model.ShoppingCartItems != null && Model.ShoppingCartItems.Count > 0)
    {
        <span class="ms-2 badge rounded-pill bg-danger">
            @Model.ShoppingCartItems.Count
        </span>
    }
</a>
