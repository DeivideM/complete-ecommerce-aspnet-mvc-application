<div class="row">
    @foreach (var movie in Model)
    {
        <div class="col-md-4 col-xs-6 mb-4 d-flex">
            <div class="card flex-fill h-100">
                <div class="card-header d-flex align-items-center">
                    <h5 class="mb-0">@movie.Name</h5>
                    <a asp-action="Edit" asp-route-id="@movie.Id" class="ms-auto text-decoration-none text-dark">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                </div>

                <div class="row g-0">
                    <div class="col-md-6 text-center p-2">
                        <img src="@movie.ImageURL"
                             alt="@movie.Name"
                             class="img-fluid rounded-start"
                             style="max-height: 200px; object-fit: cover;" />
                    </div>

                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@movie.Description</p>
                            <p class="card-text"><b>Cinema: </b>@movie.Cinema.Name</p>
                            <p class="card-text"><b>Category: </b>@movie.MovieCategory</p>
                            <p class="card-text"><b>Start: </b>@movie.StartDate.ToString("dd MMM yy")</p>
                            <p class="card-text"><b>End: </b>@movie.EndDate.ToString("dd MMM yy")</p>
                            <p class="card-text">
                                <b>Status: </b>
                                @if (DateTime.Now >= movie.StartDate && DateTime.Now <= movie.EndDate)
                                {
                                    <span class="badge bg-success text-white">AVAILABLE</span>
                                }
                                else if (DateTime.Now > movie.EndDate)
                                {
                                    <span class="badge bg-danger text-white">EXPIRED</span>
                                }
                                else
                                {
                                    <span class="badge bg-primary text-white">UPCOMING</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>

                <div class="card-footer mt-auto">
                    <div class="d-flex justify-content-between">
                        <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@movie.Id">
                            <i class="bi bi-eye-fill"></i> Show Details
                        </a>
                        <a class="btn btn-success text-white">
                            <i class="bi bi-cart-plus"></i> Add to Cart (@movie.Price.ToString("c"))
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


@await Html.PartialAsync("_CreateItem", "Movies")